    "@storybook/manager-api": "^8.6.14",
    "@storybook/react-vite": "^9.0.18",
    "@storybook/theming": "^8.6.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.5",
    "@types/react": "^19.1.8",
